<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RegisterFragment">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:contentDescription="Logo Icon"
        android:scaleX="2.5"
        android:scaleY="2.5"
        android:src="@drawable/logo2"
        app:layout_constraintBottom_toTopOf="@+id/registerNomeEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/registerNomeEditText"
        android:layout_width="311dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext_design"
        android:ems="15"
        android:textSize="24sp"
        android:textColorHint="@color/blue"
        android:autoSizeMaxTextSize="@android:dimen/notification_large_icon_width"
        android:drawableStart="@drawable/baseline_account_circle_24"
        android:drawablePadding="10dp"
        android:hint="Nome"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImageView"
        />

    <EditText
        android:id="@+id/registerCognomeEditText"
        android:layout_width="311dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:textColorHint="@color/blue"
        android:background="@drawable/edittext_design"
        android:ems="15"
        android:autoSizeMaxTextSize="@android:dimen/notification_large_icon_width"
        android:drawableStart="@drawable/baseline_account_circle_24"
        android:drawablePadding="10dp"
        android:hint="Cognome"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerNomeEditText"
        />

    <EditText
        android:id="@+id/registerUsernameEditText"
        android:layout_width="311dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/blue"
        android:background="@drawable/edittext_design"
        android:textSize="24sp"
        android:ems="15"
        android:autoSizeMaxTextSize="@android:dimen/notification_large_icon_width"
        android:drawableStart="@drawable/baseline_account_box_24"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerCognomeEditText"
        />

    <EditText
        android:id="@+id/registerPasswordEditText"
        android:layout_width="311dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:autoSizeMaxTextSize="@android:dimen/notification_large_icon_width"
        android:background="@drawable/edittext_design"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawablePadding="10dp"
        android:ems="15"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColorHint="@color/blue"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerUsernameEditText" />

    <Button
        android:id="@+id/registerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerPasswordEditText"
        android:layout_marginTop="50dp"
        android:layout_width="183dp"
        android:layout_height="60dp"
        android:text="Registrati"
        app:cornerRadius="40dp"
        android:backgroundTint="@color/blue"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textViewErrorRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="17sp"
        android:textColor="@color/red"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/registerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerPasswordEditText"
        app:layout_constraintVertical_bias="0.19999999" />


</androidx.constraintlayout.widget.ConstraintLayout>